{% extends '::base.html.twig' %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('bundles/wiki/css/style.css') }}" />
  <link rel="stylesheet" href="{{ asset('bundles/wiki/css/font-awesome.min.css') }}" />
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">

{% endblock %}

{% block title 'Demo Bundle' %}

{% block body %}

    {% block content_header %}
      <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Wiki</a>
          </div>
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
              <li><a href="{{ path('_wiki_createPage') }}"><i class="fa fa-plus fa-fw"></i> Page</a></li>
              <li><a href="{{ path('_wiki_createCategory') }}"><i class="fa fa-plus fa-fw"></i> Cat√©gorie</a></li>
              {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                  <li><a href="#">{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</a></li>
                  <li><a href="{{ path('fos_user_security_logout') }}">
                      {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                  </a></li>
              {% else %}
                  <li><a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></li>
              {% endif %}
            </ul>
            <form class="navbar-form navbar-left">
              <input class="form-control" placeholder="Search..." type="text">
            </form>
          </div>
        </div>
      </div>
    {% endblock %}
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
            {{ render(controller('WikiGeneralBundle:Category:showCategoryWithPage')) }}
        </div>
        <div class="col-sm-9 col-md-10 affix-content">
          {% block content %}{% endblock %}
        </div>
      </div>
    </div>
{% endblock %}

{% block javascripts %}
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
{% endblock %}
