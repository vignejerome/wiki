{% extends "WikiGeneralBundle::layout.html.twig" %}

 {% block content %}

<div class="container">

  <h1>Création d'une catégorie</h1>

  <form action="{{ path('_wiki_createCategory') }}" method="post" {{ form_enctype(form) }}>

    {% if (form_errors(form.name)) %}
      <div id="output" class="alert alert-danger animated fadeInUp">
        {{ form_errors(form.name) }}
      </div>
    {% endif %}
    <div class="form-group">
      {{ form_label(form.name, "Nom de la catégorie") }}
      {{ form_widget(form.name, {'attr': {'class': 'form-control input-lg', 'tabindex': '2'}}) }}
    </div>
    {{ form_row(form._token) }}
    <button type="submit" class="btn btn-success">Créer</button>
    <button type="reset" class="btn btn-default">Reinitialiser</button>
  </form>

</div>


 {% endblock %}
