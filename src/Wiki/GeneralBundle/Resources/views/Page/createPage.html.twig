{% extends "WikiGeneralBundle::layout.html.twig" %}

 {% block content %}

<div class="container">

  <h1>Cr√©ation d'une page</h1>

  <form action="{{ path('_wiki_createPage') }}" method="post" {{ form_enctype(form) }}>

    {% if (form_errors(form.category) or form_errors(form.title) or form_errors(form.body)) %}
      <div id="output" class="alert alert-danger animated fadeInUp">
        {{ form_errors(form.category) }}
        {{ form_errors(form.title) }}
        {{ form_errors(form.body) }}
      </div>
    {% endif %}
    <div class="form-group">
      {{ form_label(form.category, "Selectionner la categorie") }}
      {{ form_widget(form.category, {'attr': {'class': 'form-control input-lg', 'tabindex': '2', 'data-prototype':'{{ form.category.vars.prototype.name|e }}' }}) }}
    </div>
    <div class="form-group">
      {{ form_label(form.title, "Titre de l'article") }}
      {{ form_widget(form.title, {'attr': {'class': 'form-control input-lg', 'tabindex': '2'}}) }}
    </div>
    <div class="form-group">
      {{ form_label(form.body, "Contenu") }} <a class="" data-toggle="modal" data-target=".bs-modal-lg">Aide Markdown <i class="fa fa-question-circle"></i></a>
      {{ form_widget(form.body, {'attr': {'class': 'form-control input-lg', 'tabindex': '3'}}) }}
      
    </div>
    {{ form_row(form.date) }}
    {{ form_row(form._token) }}
    <button type="submit" class="btn btn-success">Ajouter</button>
  </form>

  {{ include('WikiGeneralBundle:Common:modal.html.twig') }}

</div>


 {% endblock %}

 {% block javascripts %}
 {% endblock %}
