{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

<div class="container">
  <div class="login-container">
      {% if error %}
        <div id="output" class="alert alert-danger animated fadeInUp">
          {{ error|trans }}
        </div>
      {% endif %}
      <div class="avatar"></div>
      <div class="form-box">
          <form action="{{ path("fos_user_security_check") }}" method="post">
              <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
              <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="{{ 'security.login.username'|trans }}"/>
              <input type="password" id="password" name="_password" placeholder="{{ 'security.login.password'|trans }}"/>
              <label>
                <input type="checkbox"type="checkbox" id="remember_me" name="_remember_me" value="on"> {{ 'security.login.remember_me'|trans }}
              </label>
              <button class="btn btn-info btn-block login" type="submit" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
          </form>
      </div>
  </div>
</div>

{% endblock fos_user_content %}
