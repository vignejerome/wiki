{% trans_default_domain 'FOSUserBundle' %}
<div class="container">
<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">

    <form role="form" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
      {% if (form_errors(form.username) or form_errors(form.email) or form_errors(form.plainPassword.first) or form_errors(form.plainPassword.second)) %}
        <div id="output" class="alert alert-danger animated fadeInUp">
          {{ form_errors(form.username) }}
          {{ form_errors(form.email) }}
          {{ form_errors(form.plainPassword.first) }}
          {{ form_errors(form.plainPassword.second) }}
        </div>
      {% endif %}
      {{ form_row(form._token) }}
      <h2>Please Sign Up <small>It's free and always will be.</small></h2>
      <hr class="colorgraph">
      <div class="form-group">
        {{ form_widget(form.username, {'attr': {'class': 'form-control input-lg', 'placeholder': 'Username', 'tabindex': '1'}}) }}
      </div>
      <div class="form-group">
        {{ form_widget(form.email, {'attr': {'class': 'form-control input-lg', 'placeholder': 'Email', 'tabindex': '2'}}) }}
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control input-lg', 'placeholder': 'password', 'tabindex': '3'}}) }}
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control input-lg', 'placeholder': 'Confirm password', 'tabindex': '4'}}) }}
          </div>
        </div>
      </div>
